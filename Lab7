void PrintConsoleMessageRU(const string& str)
{
    SetConsoleOutputCP(1251);
    cout << str;
    //SetConsoleOutputCP(CP_UTF8);
}

void PrintConsoleMessageRU(const string& str, bool isEndl)
{
    SetConsoleOutputCP(1251);
    cout << str;
    if (isEndl) cout << endl;
    //SetConsoleOutputCP(CP_UTF8);
}
